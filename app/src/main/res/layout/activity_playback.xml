<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tirth.billbot.PlaybackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lines: "
        android:id="@+id/playback_numRecordings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current: "
        android:id="@+id/playback_current" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play next"
        android:id="@+id/playback_button_next"
        android:onClick="playbackNext"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play last"
        android:id="@+id/playback_button_last"
        android:layout_gravity="center_horizontal"
        android:onClick="playbackPrevious"/>
</LinearLayout>
